{
  "apiVersion": "v1",
  "kind": "ReplicationController",
  "metadata": {
    "name": "checkout-api-rc-{{TAG}}",
    "labels": {
      "app": "checkout-api",
      "env": "{{NAMESPACE}}"
    }
  },
  "spec": {
    "replicas": {{REPLICAS}},
    "template": {
      "metadata": {
        "labels": {
          "app": "checkout-api",
          "env": "{{NAMESPACE}}",
          "deployment": "{{DEPLOYMENT_ID}}"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "api",
            "image": "{{QUALIFIED_IMAGE_NAME}}",
            "env": [
              {
                "name": "RECEIPTFUL_API_KEY",
                "value": "{{RECEIPTFUL_API_KEY}}"
              }
            ],
            "ports": [
              {
                "containerPort": 8080
              }
            ]
          }
        ]
      }
    }
  }
}
